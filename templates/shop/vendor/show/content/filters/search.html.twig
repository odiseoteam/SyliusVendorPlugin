<form method="get" action="{{ path('odiseo_vendor_shop_vendor_show', {'slug': app.request.attributes.get('slug')}) }}">
    <div class="input-group">
        {% set products = hookable_metadata.context.products %}

        {% for filter in products.definition.enabledFilters %}
            {{ sylius_grid_render_filter(products, filter) }}
        {% endfor %}
        <button class="btn btn btn-outline-secondary btn-sm" type="submit" {{ sylius_test_html_attribute('search') }} aria-label="search button">
            {{ ux_icon('tabler:search') }}
        </button>
        <a class="btn btn btn-outline-secondary btn-sm" href="{{ path('odiseo_vendor_shop_vendor_index') }}" {{ sylius_test_html_attribute('clear') }} aria-label="clear filters">
            {{ ux_icon('tabler:x') }}
        </a>
    </div>
</form>
