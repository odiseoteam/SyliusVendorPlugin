{% set form = hookable_metadata.context.form %}
{% set vendor = form.vars.data %}

<div class="tab-pane {% if hookable_metadata.configuration.active|default(false) %}show active{% endif %}" id="vendor-profile" role="tabpanel" tabindex="0">
    <div class="card mb-3">
        <div class="card-header">
            <h2 class="card-title">
                {{ 'sylius.ui.profile'|trans }}
            </h2>
        </div>
        <div class="card-body">
            {% hook 'profile' with { vendor } %}
        </div>
    </div>
</div>
