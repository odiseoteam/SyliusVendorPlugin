{% for vendor in vendors %}
    <div class="column" {{ sylius_test_html_attribute('vendor') }}>
        <a href="{{ path('odiseo_sylius_vendor_plugin_shop_vendor_product_index', {'slug': vendor.slug} ) }}" class="ui fluid card">
            <div class="image">
                <img src="{{ vendor.logoName|imagine_filter('odiseo_sylius_vendor_plugin_logo') }}" alt="{{ vendor.name }}">
            </div>
            <div class="content">
                <div class="description">{{ vendor.name }}</div>
            </div>
        </a>
    </div>
{% endfor %}
